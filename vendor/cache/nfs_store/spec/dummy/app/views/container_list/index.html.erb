<h2>Apps</h2>
  <%= form_for( current_user) do |f| %>
    <%= f.select :app_type_id, Admin::AppType.pluck(:name, :id) %>
    <%= f.submit value: 'Change', id: 'app_type_change_submit', class: 'hidden'%>
  <% end %>

  <p>
    Default group for containers: gid<%= NfsStore::Manage::Filesystem.app_type_containers_gid(current_user.app_type_id) %>
  </p>
  <p><%= current_user.email %>: <%=link_to 'log out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>

<h2>User Roles</h2>

<% @user_roles = current_user.user_roles.active%>
<%= render partial: 'admin/user_roles/index' %>

<h2>Containers</h2>
<% if current_user.app_type_id %>
<%= render partial: 'container_list' %>
<% else %>
<p>User does not have an app type selected</p>
<% end %>


<script>
$(document).ready(function() {
  $('#user_app_type_id').on('change', function() {
    $('#app_type_change_submit').click();
  })
});
</script>

<ul>
  <% @containers.each do |c| %>
  <%
  c.current_user = current_user
  deets = "#{c.name}"
  deets += " - GID #{c.directory_group}"
  deets += " (not readable)" unless c.readable?
  deets += " (not writable)" unless c.writable?


  %>
  <li><%= link_to deets, nfs_store.browse_path(c.id) %></li>
  <% end %>
</ul>

<p> <%= link_to 'add container', new_container_list_path %></p>

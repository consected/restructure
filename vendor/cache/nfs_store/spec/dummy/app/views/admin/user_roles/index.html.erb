<p id="notice"><%= notice %></p>

<h1>User Roles</h1>

<table class="table">
  <thead>
    <tr>
      <th>user</th>
      <th>role name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_roles.each do |user_role| %>
      <tr>
        <td><%= user_role.user.email %></td>
        <td><%= user_role.role_name %></td>
        <td><%= link_to 'Edit', edit_admin_user_role_path(user_role) %></td>
        <td><%= link_to 'Destroy', user_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


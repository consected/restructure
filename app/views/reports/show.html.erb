<%= render partial: 'masters/search_results_template' %>
<%= render partial: 'masters/modal_pi_search_results_template' %>
<%
@report_page = true
%>

<script id="edit-report-result" type="text/x-handlebars-template" class="hidden handlebars-template">
  <span>
  </span>
</script>

<% if @report.editable_data? %>
<span id="editable_data"></span>
<% end %>

<div class="report-criteria container-fluid">
  <div class="row">
    <div class="col-sm-22 col-sm-offset-1">
      <div class="well">
        <%= link_to "report library", reports_path, class: 'btn btn-info pull-right'%><h1><%=@report.name%></h1>
        <% (@report.description || "").split("\n").each do |l| %>
        <p><%= l %></p>
        <% end %>
        <p>&nbsp;</p>
        <%= render partial: 'criteria' %>
        <% if creatable? %>
          <div class="text-center">
            <%= link_to "New Item", new_report_path(report_id: @report.id), remote: true, class: "btn btn-default" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div id="master_results_block" data-sub-item="masters" data-template="search-results-template" data-preprocessor="master_search_results">
<% if @results %>
<%= render partial: 'results' %>

<% end %>
</div>

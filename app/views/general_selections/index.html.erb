<p id="notice"><%= notice %></p>

<h1>Listing General Selections</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th>Item type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @general_selections.each do |general_selection| %>
      <tr>
        <td><%= general_selection.name %></td>
        <td><%= general_selection.value %></td>
        <td><%= general_selection.item_type %></td>
        <td><%= link_to 'Show', general_selection %></td>
        <td><%= link_to 'Edit', edit_general_selection_path(general_selection) %></td>
        <td><%= link_to 'Destroy', general_selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


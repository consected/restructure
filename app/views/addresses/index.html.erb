<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Master</th>
      <th>Street</th>
      <th>Street2</th>
      <th>Street3</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Source</th>
      <th>Rank</th>
      <th>Type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.master %></td>
        <td><%= address.street %></td>
        <td><%= address.street2 %></td>
        <td><%= address.street3 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.zip %></td>
        <td><%= address.source %></td>
        <td><%= address.rank %></td>
        <td><%= address.rec_type %></td>
        <td><%= address.user %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


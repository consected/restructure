<div class="col-md-8 col-md-offset-8 well">
<h2>Change Password for <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: send("#{resource_name}_registration_path", resource), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group-non">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", disabled: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="form-group-non">
    <%= f.label :current_password %><br/><i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class: "form-control", autocomplete: 'current-password' %>
  </div>

  <div class="form-group-non">
    <%= f.label 'enter new password',  'data-add-icon' => 'info-sign', title: 'minimum 8 characters'  %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", minlength: 8, pattern: ".{8,72}", required: true, title: 'minimum 8 characters'%>
  </div>

  <div class="form-group-non">
    <%= f.label :password_confirmation,  'data-add-icon' => 'info-sign', title: 'minimum 8 characters'  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", minlength: 8, pattern: ".{8,72}", required: true, title: 'minimum 8 characters'%>
  </div>


  <div class="actions">
    <%= link_to "Back", :back, class: "btn btn-danger" %>    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>

</div>

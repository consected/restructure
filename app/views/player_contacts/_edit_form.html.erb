<div class="data-results">
  <div data-result="<%= edit_form_id %>">
    <div class="">
      <%=form_for([@master, object_instance], edit_form_hash ) do |f|%>
      <ul class="list-group">
        <li class="list-group-item">
          <%= inline_cancel_button %>
          <h4 class="list-group-item-heading">Edit Player Contact</h4>
        </li>
        <li class="list-group-item player-contact-rec_type">
            <%= f.label :rec_type %>
            <%= f.select :rec_type, general_selection(:player_contacts_type, value: object_instance.rec_type) %>
        </li>
        <li class="list-group-item player-contact-data">
            <%= f.label :data %>
            <%= f.text_field :data %>
        </li>  
        <li class="list-group-item player-contact-source">
            <%= f.label :source, 'data-add-icon' => 'question-sign', 'data-show-modal' => general_selection_block_id(:player_contacts_source), title: 'original sources of data' %>
            <%= f.select :source, general_selection(:player_contacts_source, value: object_instance.source) %>
        </li>
        <li class="list-group-item player-contact-rank">
            <%= f.label :rank %>
            <%= f.select :rank, general_selection(:player_contacts_rank, present: :hyphenate_name_val, order: :value_number_desc, value: object_instance.rank) %>
        </li>
        <li class="list-group-item">
          <%= f.submit class: "btn btn-primary" %>  
        </li>
      </ul>
      <% end %>
    </div>
    <%= render partial: 'general_selections/definitions_block', locals: {item_type: :player_contacts_source, value: object_instance.source} %>
  </div>
</div>
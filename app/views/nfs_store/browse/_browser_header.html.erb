<div class="container-heading-block">
  <h4 class="container-name"><%=container_label%></h4>
  <span class="container-id-label">ID <%=container_id%></span>
  <%= link_to "", "/nfs_store/container_list/#{container_id}", class: "refresh-container-list glyphicon glyphicon-refresh", title: "refresh list", data: { remote: "true", container_id: container_id } %>
  <div class="container-meta-controls">
    <div class="button-radio">
      <input type="radio" name="container-meta-controls-<%=container_id%>" id="container-meta-controls-<%=container_id%>-none" value="" class="ff" /> <label for="container-meta-controls-<%=container_id%>-none">no details</label>
    </div>
    <div class="button-radio">
      <input type="radio" name="container-meta-controls-<%=container_id%>" id="container-meta-controls-<%=container_id%>-meta" value="meta" class="ff" /> <label for="container-meta-controls-<%=container_id%>-meta">file metadata</label>
    </div>
    <div class="button-radio">
      <input type="radio" name="container-meta-controls-<%=container_id%>" id="container-meta-controls-<%=container_id%>-classifications" value="classifications" class="ff" checked="checked" /> <label for="container-meta-controls-<%=container_id%>-classifications">classifications</label>
    </div>
  </div>
</div>

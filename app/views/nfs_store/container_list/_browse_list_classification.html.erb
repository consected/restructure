<% # NOTE: there is a handlebars template that also provides some of this layout in filestore/classification/_result_template.html.erb %>
<%
  full_name = "nfs_store__manage__#{download.class.retrieval_type}"
%>
<span class="bem-classification-attrs">
<span class="bem-class-title"><%= download.title.present? ? download.title : '(no title)'  %></span>

  <% if Classification::ItemFlagName.enabled_for?(full_name, current_user) %>
  <script>
  <%
    extras = {
      include: [:item_flag_name],
      methods: [:method_id, :item_type_us]
    }
  %>
    var flag_data = {item_flags: <%= download.item_flags&.as_json(extras).to_json.html_safe || 'null' %>};
    if(flag_data.item_flags.length == 0) {
      var res = '<span class="no-item-flags">(no tags)</span>'
    }
    else {
      flag_data.item_type="<%=full_name%>";
      flag_data.readonlyview=true;
      var res = _fpa.partials.item_flag_container(flag_data);

    }
    var block = $('<span class="bem-class-flags">'+res+'</span>');
    $('#container-entry-<%=@container.id%>-<%=download.id%>-<%=download.class.retrieval_type%> .bem-class-title').first().after(block);
  </script>
  <% end %>
</span>
<%=link_to "", Rails.application.routes.url_helpers.master_filestore_classification_path(@container.master_id, @container.id, download_id: download.id, retrieval_type: download.class.retrieval_type), class: 'glyphicon glyphicon-eye-open', data: {remote: true, container_id: @container_id, toggle: 'scrollto-result', result_target_force: 'true', result_target: "[data-subscription='filestore-classification-#{download.class.retrieval_type.hyphenate}-edit-form--#{@container.id}']", template:  "filestore-classification-#{download.class.retrieval_type.hyphenate}-full-result-template" }%>

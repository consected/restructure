<div class="data-results">
  <table>
    <tbody>
    <tr data-result="<%= edit_form_id %>">  
    <td colspan="9">
    
      <div>        
        <h4 class="form-group-heading">Edit Tracker Record</h4>
      </div>
      
      <%=form_for([@master, object_instance], edit_form_hash(html: {class: 'form-inline'}) ) do |f|%>

        <div class="row">
          <div class="col-md-6">
            <div class="form-group tracker-protocol">
                <%= f.label :protocol, 'data-add-icon' => 'info-sign', title: "#{object_instance.id ? 'Protocol for existing records can not be changed.' : 'Set protocol for tracker record. This can not be changed after creation.'}"  %>
                <%= f.select :protocol_id, protocol_array_without_updates, {prompt: "-pick one-"}, {"data-filters-selector" => "#tracker_sub_process_id, #tracker_outcome", class: "form-control", disabled: (!!@tracker.id)}%>
            </div>                        
            
          </div>
          <div class="col-md-6">
            <div class="form-group tracker-sub_process">
              <%= f.label :sub_process %>
              <%= f.select :sub_process_id, sub_processes_array_with_class, {include_blank: "-select-"}, {"data-filters-selector" => "#tracker_protocol_event_id", class: "form-control"} %>
            </div>  
                
          </div>
          <div class="col-md-6">
            <div class="form-group tracker-event">
                <%= f.label :event%>
                <%= f.select :protocol_event_id, protocol_events_array_with_class, {include_blank: "-select-"}, class: "form-control" %>
            </div>  
            <div class="form-group tracker-event_date" style="display: block;">
                <%= f.label :event_date %>
                <%= f.date_field :event_date, class: "form-control" %>
            </div>  
          </div>
        </div>
        <div class="row">
            <div class="col-md-18">
              <div class="tracker-notes">
                <%= f.label :notes %>
                <%= f.text_area :notes, class: "form-control" %>
              </div>
            </div>
            <div class="col-md-6">

              <div  class="form-group">
                <%= inline_cancel_button "" %> <%= f.submit class: "btn btn-primary" %>
              </div>

            </div>
            
        </div>
        
      <% end %>

    
    </td>
  </tr>
  </tbody>
  </table>
</div>
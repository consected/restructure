<%
  unless defined? data
    data = {}
  end
  options.each do |opt|
    if opt.is_a? Hash
      opt = opt.flatten
    elsif opt.is_a? Array
    else
      opt = [opt, opt]
    end
    opt_label = opt.first
    opt_val = opt.last || ''
    # opt_val_id = opt_val.hyphenate
  %>
<div class="button-radio">
  <%= form.radio_button field_name_sym, opt_val, { data: {attr_name: field_name_sym, object_name: form_object_item_type_us}} %>

  <%= form.label field_name_sym, opt_label, value: opt_val, class: "radio-label"  %>
</div>
<% end %>

<%
  form_object_instance[field_name_sym.to_s]&.upcase!
  options = field_options_for(form_object_instance, field_name_sym)
  options[:include_blank] = true unless options.has_key?(:include_blank)
  options[:priority_countries] ||= ["US", "CA", "DE"];
%>
<%= form.label field_name_sym, label_for(field_name_sym, labels) %>
<%= form.country_select field_name_sym, options, {class: "form-control country-select input-sm", data: {attr_name: field_name_sym, object_name: form_object_item_type_us} } %>

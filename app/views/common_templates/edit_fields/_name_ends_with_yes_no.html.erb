<%= form.label field_name_sym, label_for(field_name_sym, labels, '_yes_no') %>

<% options = field_options_for(form_object_instance, field_name_sym) %>
<%
  if options[:include_blank]
    sel_options = {'(not set)': nil}
  else
    sel_options = {}
  end
  sel_options.merge! 'yes': 'yes', 'no': 'no'

%>
<%= render partial: 'common_templates/edit_fields/button_radio', locals: {form: form, form_object_instance: form_object_instance,  field_name_sym: field_name_sym, form_object_item_type_us: form_object_item_type_us, options: sel_options, value: form_object_instance.attributes[field_name], data: {attr_name: field_name_sym, object_name: form_object_item_type_us}, alt_options: options } %>
